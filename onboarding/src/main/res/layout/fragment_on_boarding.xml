<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_onboarding"
    android:orientation="vertical"
    tools:context="id.myone.capstone_books_store.onboarding.presenter.OnBoardingFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/previous"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_baseline_arrow_circle_left_24"
            android:contentDescription="@string/previous" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/dot_first"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/intro_dot"
                android:textAlignment="center"
                android:textColor="@color/active_indicator"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/dot_second"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/intro_dot"
                android:textAlignment="center"
                android:textColor="@color/inactive_indicator"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot_three"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/intro_dot"
                android:textAlignment="center"
                android:textColor="@color/inactive_indicator"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/next"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_baseline_arrow_circle_right_24"
            android:contentDescription="@string/next" />
    </LinearLayout>
</RelativeLayout>