<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/gradient_onboarding"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/slider_title"
        android:tag="slider_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingHorizontal="22dp"
        android:paddingTop="12dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

    <ImageView
        android:id="@+id/slider_image"
        android:tag="slider_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:contentDescription="@string/on_boarding_image"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/slider_desc"
        app:layout_constraintTop_toBottomOf="@+id/slider_title"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/slider_desc"
        android:tag="slider_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:maxLines="3"
        android:paddingHorizontal="16dp"
        android:paddingBottom="22dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@tools:sample/lorem/random" />
</androidx.constraintlayout.widget.ConstraintLayout>